    private void UpdateHealthStatus()
    {
        // 100% Health = 0 Smoked.
        // 0% Health = Baseline Smoked.
        double ratio = 0;
        if (_smokesBaseline > 0)
            ratio = (double)_smokesCurrentValue / (double)_smokesBaseline;
            
        double healthPercent = Math.Max(0, 100 - (ratio * 100)); // 0 smoked = 100% health
        
        if (healthPercent >= 100)
        {
            _lungsHealthStatus = "Healing";
            _lungsHealthColor = Color.Success;
        }
        else if (healthPercent >= 50)
        {
            _lungsHealthStatus = "Recovering";
            _lungsHealthColor = Color.Info;
        }
        else if (healthPercent >= 20)
        {
             _lungsHealthStatus = "Warning";
             _lungsHealthColor = Color.Warning;
        }
        else
        {
             _lungsHealthStatus = "At Risk";
             _lungsHealthColor = Color.Error;
        }
    }

