<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Daily.Views"
             x:Class="Daily.Pages.HomePage"
             Title="Home">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{AppThemeBinding Light='#CAC7E4', Dark='#594AE2'}" Offset="0.0" />
            <GradientStop Color="{AppThemeBinding Light='#E6E6E6', Dark='#1b0e33'}" Offset="0.5" />
            <GradientStop Color="{AppThemeBinding Light='#C1D8E4', Dark='#00d2ff'}" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <views:WeatherWidgetView>
                <views:WeatherWidgetView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWeatherWidgetTapped" />
                </views:WeatherWidgetView.GestureRecognizers>
            </views:WeatherWidgetView>
            <views:RssFeedWidgetView ItemSelected="OnRssItemSelected" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
