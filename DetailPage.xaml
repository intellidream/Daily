<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Daily"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Daily.DetailPage"
             Title="Daily Detail"
             BackgroundColor="Transparent">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="Transparent" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.Background>
        <OnPlatform x:TypeArguments="Brush">
            <On Platform="Android,iOS">
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{AppThemeBinding Light='#CAC7E4', Dark='#594AE2'}" Offset="0.0" />
                    <GradientStop Color="{AppThemeBinding Light='#E6E6E6', Dark='#1b0e33'}" Offset="0.5" />
                    <GradientStop Color="{AppThemeBinding Light='#C1D8E4', Dark='#00d2ff'}" Offset="1.0" />
                </LinearGradientBrush>
            </On>
            <On Platform="WinUI,MacCatalyst">
                <SolidColorBrush Color="Transparent" />
            </On>
        </OnPlatform>
    </ContentPage.Background>

    <!--<RefreshView x:Name="refreshView" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}" RefreshColor="#594AE2" BackgroundColor="Transparent">-->
    <Grid>
        <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html" BackgroundColor="Transparent">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type local:Components.Pages.DetailPane}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>

        <WebView x:Name="InternalBrowser" IsVisible="False" Margin="0,50,0,0" BackgroundColor="{AppThemeBinding Light=#FAF9F6, Dark=Black}" />
    </Grid>
    <!--</RefreshView>-->

</ContentPage>
